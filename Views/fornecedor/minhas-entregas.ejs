<% layout('../includes/template') -%>
<%block('title','Meus Serviços');-%>
<main class="main">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row mt-3 mb-3">
                <div class="col">
                    <h2>MINHAS ENTREGAS</h2>
                </div>
            </div>
            <ul class="nav nav-tabs" id="minhaTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pendentes-tab" data-toggle="tab" href="#pendentes" role="tab"
                        aria-controls="home" aria-selected="true"> Serviços em Andamento</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="finalizadas-tab" data-toggle="tab" href="#finalizadas" role="tab"
                        aria-controls="profile" aria-selected="false">Serviços Finalizadas</a>
                </li>
            </ul>
            <div class="tab-content" id="minhaTabContent">
                <div class="tab-pane fade show active" id="pendentes" role="tabpanel" aria-labelledby="pendentes-tab">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Pedido</th>
                                    <th scope="col">Cliente</th>
                                    <th scope="col">Serviço</th>
                                    <th scope="col">Valor</th>
                                    <th scope="col">produtos</th>
                                    <th scope="col">Obs</th>                                   
                                    <th scope="col"></th>
                                    <th scope="col">Status</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% var i = 0; lista_pedidos.forEach(function(dat) {i++;  %>
                                <tr>
                                     
                                    <td><%= dat.id_pedido%></td>
                                    <td><%= dat.nome_cliente%></td>
                                    <td><%= dat.nome_servico%></td>
                                    <td><%= dat.total%></td>
                                    <td><%= dat.produtos%></td>
                                    <td><%= dat.observacoes%></td>
                                   
                                    <td class="text-right"><a class="btn btn-link" href="/fornecedor/minhas-entregas/info-servico"><i
                                                class="fa fa-info"></i></a> </td>
                                    <td><select name="status" id = "sel_and_<%= i%>"class="form-control">
                                        <% status.forEach(function(dat1) { %>
                                            <% if (dat1.id_status == dat.id_status){ %>
                                                <option value=<%= dat1.id_status%> name = 'status' selected><%= dat1.nome %></option>   
                                            <% }else { %>
                                        
                                                <option value=<%= dat1.id_status%> name = 'status' ><%= dat1.nome %></option> 
                                            <% } %>                    
                                        <% }); %>
                                    </select>
                                    </td>
                                        
                                    <td><button class="btn btn-success" id="btn-add-produto" value="<%= dat.id_pedido%>" name='id_pedido'onclick="alterar_status_and(<%= dat.id_pedido%>,<%= i%>)"><i class="fa fa-check"  ></i></button></td>
                                                  
                                </tr>
                                <% }); %> 
                            
                            </tbody>
                        </table>
                    </div>
                   
                </div>
                <div class="tab-pane fade" id="finalizadas" role="tabpanel" aria-labelledby="finalizadas-tab">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                        <th scope="col">Pedido</th>
                                        <th scope="col">Cliente</th>
                                        <th scope="col">Serviço</th>
                                        <th scope="col">Valor</th>
                                        <th scope="col">produtos</th>
                                        <th scope="col">Obs</th>                                   
                                        <th scope="col"></th>
                                        <th scope="col">Status</th>
                                        <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% lista_pedidos_finalizados.forEach(function(dat) {  %>
                                <<tr>
                                     
                                        <td><%= dat.id_pedido%></td>
                                        <td><%= dat.nome_cliente%></td>
                                        <td><%= dat.nome_servico%></td>
                                        <td><%= dat.total%></td>
                                        <td><%= dat.produtos%></td>
                                        <td><%= dat.observacoes%></td>
                                       
                                        <td class="text-right"><a class="btn btn-link" href="/fornecedor/minhas-entregas/info-servico"><i
                                                    class="fa fa-info"></i></a> </td>
                                        <td><select name="status" id = "sel_fin_<%= i%>"class="form-control">
                                                <% status.forEach(function(dat1) { %>
                                                    <% if (dat1.id_status == dat.id_status){ %>
                                                        <option value=<%= dat1.id_status%> name = 'status' selected><%= dat1.nome %></option>   
                                                    <% }else { %>
                                                
                                                        <option value=<%= dat1.id_status%> name = 'status' ><%= dat1.nome %></option> 
                                                    <% } %>                    
                                                <% }); %>
                                            </select>
                                        </td>
                                            
                                        <td><button class="btn btn-success" id="btn-add-produto" value="<%= dat.id_pedido%>" name='id_pedido'onclick="alterar_status_fin(<%= dat.id_pedido%>,<%= i%>)"><i class="fa fa-check"  ></i></button></td>
                                                      
                                    </tr>
                                    <% }); %> 
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<% script('/javascript/pedidos.js') -%>