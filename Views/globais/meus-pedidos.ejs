<% layout('../includes/template') -%>
<%block('title','Meus Pedidos');-%>
<main class="main">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row mt-3 mb-3">
                <div class="col">
                    <h2>MEUS PEDIDOS</h2>
                </div>
            </div>
            <ul class="nav nav-tabs" id="minhaTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pendentes-tab" data-toggle="tab" href="#pendentes" role="tab"
                        aria-controls="home" aria-selected="true">Em Andamento</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="finalizadas-tab" data-toggle="tab" href="#finalizadas" role="tab"
                        aria-controls="profile" aria-selected="false">Finalizadas</a>
                </li>
            </ul>
            <div class="tab-content" id="minhaTabContent">
                <div class="tab-pane fade show active" id="pendentes" role="tabpanel" aria-labelledby="pendentes-tab">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">Pedido</th>
                                    <th scope="col">Fornedor</th>
                                    <th scope="col">Serviço</th>
                                    <th scope="col">Valor</th>
                                    <th scope="col">produtos</th>
                                    <th scope="col">obs</th>
                                    <th scope="col">status</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% var i = 0; lista_pedidos.forEach(function(dat) {  %>
                                <tr>
                                    <td><%= dat.id_pedido%></td>
                                    <td><%= dat.nome_forn%></td>
                                    <td><%= dat.nome_servico%></td>
                                    <td><%= dat.total%></td>
                                    <td><%= dat.produtos%></td>
                                    <td><%= dat.observacoes%></td>
                                    <td><%= dat.nome_status%></td>
                                    <td class="text-right"><a class="btn btn-link"
                                            href="/meus-pedidos/detalhe-pedido"><i class="fa fa-info"></i></a> </td>
                                </tr>
                                <% }); %> 
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="tab-pane fade" id="finalizadas" role="tabpanel" aria-labelledby="finalizadas-tab">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                        <th scope="col">Pedido</th>
                                        <th scope="col">Fornedor</th>
                                        <th scope="col">Serviço</th>
                                        <th scope="col">Valor</th>
                                        <th scope="col">produtos</th>
                                        <th scope="col">obs</th>
                                        <th scope="col">status</th>
                                        <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% var i = 0; lista_pedidos_finalizados.forEach(function(dat) {  %>
                                        <tr>
                                            <td><%= dat.id_pedido%></td>
                                            <td><%= dat.nome_forn%></td>
                                            <td><%= dat.nome_servico%></td>
                                            <td><%= dat.total%></td>
                                            <td><%= dat.produtos%></td>
                                            <td><%= dat.observacoes%></td>
                                            <td><%= dat.nome_status%></td>
                                            <td class="text-right"><a class="btn btn-link"
                                                    href="/meus-pedidos/detalhe-pedido"><i class="fa fa-info"></i></a> </td>
                                        </tr>
                                        <% }); %> 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>