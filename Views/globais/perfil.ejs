<% layout('../includes/template') -%>
<%block('title','Usuários');-%>
<main class="main">
    <div class="container-fluid">
        <div>
            <div class="animated fadeIn">
                <div class="row mt-3 mb-3">
                  <div class="col">
                    <h2>PERFIL</h2>
                  </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <form>
                                    <div class=" form-group row">
                                        <div class="col">
                                            <label for="nome">Nome</label>
                                            <div class="input-group">                         
                                                <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                <i class="fa fa-user"></i>
                                                </span>
                                                </div>
                                                <input class="form-control" id="nome" type="text" name="input1-group1" placeholder="Nome" autocomplete="nome" readonly="true">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="email">E-mail</label>
                                            <div class="input-group">                    
                                                <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                <i class="fa fa-envelope"></i>
                                                </span>
                                                </div>
                                                <input class="form-control" id="email" type="email" name="input1-group1" placeholder="E-mail" autocomplete="email" readonly="true">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="senha">Senha</label>
                                            <div class="input-group">                    
                                                <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                <i class="fa fa-lock"></i>
                                                </span>
                                                </div>
                                                <input class="form-control" id="senha" type="password" name="input1-group1" placeholder="Senha" autocomplete="senha" readonly="true">
                                            </div>
                                        </div>
                                        <div class="col" style="display: none">
                                            <label for="repsenha">Repita Senha</label>
                                            <div class="input-group">                    
                                                <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                <i class="fa fa-lock"></i>
                                                </span>
                                                </div>
                                                <input class="form-control" id="repsenha" type="password" name="input1-group1" placeholder="Senha" autocomplete="senha">
                                            </div>
                                        </div>
                                       
                                    </div>
                                    <hr>
                                    <div class=" form-group row">
                                        <div class="col">
                                            <label for="codcondominio">Código Condomínio</label>
                                            <div class="input-group">                    
                                                <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                <i class="fa fa-lock"></i>
                                                </span>
                                                </div>
                                                <input class="form-control form-control-lg" id="input1-group1" type="text" name="codcondominio" placeholder="Codigo Condominio">
                                            </div>
                                        </div>
                                    </div>
                                    <div class=" form-group row ">
                                        <div class="col">
                                            <label for="condominio">Condomínio</label>
                                            <div class="input-group">                    
                                                <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                <i class="fa fa-home"></i>
                                                </span>
                                                </div>
                                                <input class="form-control" id="condominio" type="text" name="input1-group1" placeholder="Nome do Condomínio" autocomplete="nomecondominio" readonly="true">
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <div class="form-group row">
                                        <div class="col">
                                            <label for="logradouro">Logradouro</label>
                                            <div class="input-group">                    
                                                <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                <i class="fa fa-city"></i>
                                                </span>
                                                </div>
                                                <input class="form-control" id="logradouro" type="text" name="input1-group1" placeholder="Logradouro" autocomplete="cidadecondominio" readonly="true">
                                            </div>
                                        </div>
                                        <div class="col col-md-3">
                                                <label for="numero">Numero</label>
                                                <div class="input-group">                    
                                                    <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                    <i class="fa fa-hashtag"></i>
                                                    </span>
                                                    </div>
                                                    <input class="form-control" id="numero" type="text" name="input1-group1" placeholder="Numero" autocomplete="numerocondominio" readonly="true">
                                                </div>
                                            </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col col-md-6">
                                                <label for="cidade">Cidade</label>
                                                <div class="input-group">                    
                                                    <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                    <i class="fa fa-city"></i>
                                                    </span>
                                                    </div>
                                                    <input class="form-control" id="cidade" type="text" name="input1-group1" placeholder="Cidade" autocomplete="cidadecondominio" readonly="true">
                                                </div>
                                            </div>
                                        <div class="col col-md-6">
                                            <label for="estado">Estado</label>
                                            <div class="input-group">                   
                                                <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                <i class="fa fa-globe-americas"></i>
                                                </span>
                                                </div>
                                                <input class="form-control" id="estado" type="text" name="input1-group1" placeholder="Estado" autocomplete="cidadecondominio" readonly="true">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
</main>