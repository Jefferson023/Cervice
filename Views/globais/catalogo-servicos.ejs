<% layout('../includes/template') -%>
<%block('title','Serviços');-%>
<main class="main">
  <div class="container-fluid">
    <div class="animated fadeIn">
      <div class="row mt-3 mb-3">
        <div class="col">
          <h2>CATÁLOGO DE SERVIÇOS</h2>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-6 col-md-6 offset-md-3 mb-3">
          <div class="input-group mb-3">
            <input type="text" id = "nome_servico" class="form-control form-control-lg border-primary" placeholder="Buscar serviço"
              aria-label="Recipient's username" aria-describedby="button-addon2">
            <div class="input-group-append">
              <button id = "categoria" class="btn btn-outline-primary dropdown-toggle" type="button" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">Categoria</button>
              <div class="dropdown-menu">
                <% categorias.forEach(function(categoria){ %>
                  <a class="dropdown-item" onclick="mudar_categoria(this)"><%= categoria %></a>
                <% }); %>
              </div>
            </div>
            <div class="input-group-append">
              <button class="btn btn-outline-primary" type="button" onclick="buscar()">
                <i class="fa fa-search"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div id = "catalogo" class="row catalogo-servicos-grid"></div>
    </div>
</main>
<% script('/javascript/catalogo.js') -%>