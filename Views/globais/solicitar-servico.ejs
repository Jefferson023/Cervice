<% layout('../includes/template') -%>
<%block('title','Solicitação');-%>
<main class="main">
  <div class="container-fluid">
    <div class="animated fadeIn">
      <div class="row mt-3 mb-3">
        <div class="col">
          <h2>Solicitação de Serviço</h2>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-body">
                <form method="POST">
                  <div class="row">
                    <div class="col col-md-4">
                      <div class="form-group">
                        <label for="fornecedor">Fornecedor</label>
                        <input type="text" class="form-control" name="fornecedor" value = <%= rows[0].nome %> disabled>
                      </div>
                    </div>
                    <div class="col col-md-3">
                      <div class="form-group">
                        <label for="servico">Serviço</label>
                        <input type="text" class="form-control" name="servico" value = <%= rows[0].nome_servico %> disabled>
                      </div>
                    </div>
                    <div class="col col-md-3">
                      <div class="form-group">
                        <label for="categoria">Categoria</label>
                        <input type="text" class="form-control" name="categoria" value = <%= rows[0].categoria %> disabled>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                      <div class="col">
                          <div class="form-group">
                            <label for="observacao">Observações</label>
                            <textarea class="form-control" id="observacoes" rows="3" placeholder="Digite observações para a sua solicitação de serviço"></textarea>
                          </div>
                        </div>
                  </div>
                  <% if (rows.length > 1 || rows[0].id_produto != null){ %>
                    <hr>
                    <div class="row">
                      <div class="col">
                          <table class="table table-responsive-sm" id="tb-produtos" style="display:none">
                            <thead>
                              <tr>
                                <th>Nome</th>
                                <th>Descrição</th>
                                <th>Preço</th>
                                <th></th>
                              </tr>
                            </thead>
                              <tbody>
                                <tr id="linha-novo-produto" style="display:none">
                                  <td>
                                    <input type="text" id="txt-titulo-produto" class="form-control" placeholder="Título">
                                  </td>
                                  <td>
                                    <input type="text" id="txt-descricao-produto" class="form-control" placeholder="Descrição">
                                  </td>
                                  <td>
                                    <input type="number" id="txt-preco-produto" class="form-control"placeholder="">
                                  </td>
                                  <td>
                                      <button class="btn btn-success" id="btn-add-produto"><i class="fa fa-check"></i></button>
                                  </td>
                                </tr>
                              </tbody>
                          </table>
                      </div>
                    </div>                  
                    <div class="row">
                      <div class="col">
                        <button class="btn btn-primary" id="btn-novo-produto" >
                          <span class="fa fa-plus"></span> ADICIONAR PRODUTO
                        </button></div>
                    </div> 
                    </div> 
                    <hr>   
                  <% } %> 
                  <div class="row">
                    <div class="col text-right">
                      <button class="btn btn-primary" id="btn-add-servico">
                        <span class="fa fa-plus"></span> ADICIONAR SERVIÇO
                      </button>
                    </div>
                  </div>          
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</main>