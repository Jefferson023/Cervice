<% layout('../includes/template') -%>
<%block('title','Perfil');-%>
<main class="main">
    <div class="container-fluid">
        <div>
            <div class="animated fadeIn">
                <div class="row mt-3 mb-3">
                    <div class="col text-left">
                        <h2 style="text-transform: uppercase">Perfil de <%= user.nome %></h2>
                    </div>
                    <% if (user.admin) { %>
                    <div class="col text-right">
                        <h3 style="text-transform: uppercase"><span class="badge badge-info">Administrador</span></h3>
                    </div>
                    <% } else { %>
                    <div class="col text-right">
                        <h3 style="text-transform: uppercase"><span class="badge badge-info">Fornecedor</span></h3>
                    </div>
                    <% } %>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <form class="form" action="/atualizar-perfil" method="post">

                                    <div class=" form-group row">
                                        <div class="col">
                                            <label for="nome">Nome</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="nome" type="text" name="nome"
                                                    placeholder="Nome" autocomplete="nome" readonly="true"
                                                    value="<%= user.nome %>">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="email">E-mail</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="email" type="email" name="email"
                                                    placeholder="E-mail" autocomplete="email" readonly="true"
                                                    value="<%= user.email %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group" id="div-editar-senha" style="display: none">
                                        <div class="row">
                                            <div class="col"><input type="password" class="form-control"
                                                    placeholder="Nova senha" name="senha"></div>
                                            <div class="col"><input type="password" class="form-control"
                                                    placeholder="Confirmar nova senha" name="confirmasenha"></div>
                                        </div>
                                    </div>
                                    <% if (dados) { %>
                                    <div class=" form-group row">
                                        <div class="col">
                                            <label for="codcondominio">Código Condomínio</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-lock"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="input1-group1" type="text"
                                                    name="codcondominio" placeholder="Codigo Condominio"
                                                    readonly="true" value="<%= dados.codigo_acesso %>">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="bloco">Bloco</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-home"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="bloco" type="text" name="bloco"
                                                    placeholder="Bloco" autocomplete="blococondominio" readonly="true"
                                                    value="<%= dados.bloco_andar %>">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="apartamento">Apartamento</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-hashtag"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="apartamento" type="text"
                                                    name="apartamento" placeholder="Apartamento"
                                                    autocomplete="apartamentocondominio" readonly="true"
                                                    value="<%= dados.numero_casa %>">
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>

                                    <div class=" form-group row">
                                        <div class="col text-left">
                                            <button class="btn btn-primary" id="btn-editar-dados"> <i
                                                    class="fa fa-edit"></i> EDITAR</button>
                                            <button class="btn btn-success" id="btn-salvar-dados" style="display: none">
                                                <i class="fa fa-check"></i> SALVAR</button>
                                        </div>
                                        <div class="col text-right" style="display: none">
                                            <button class="btn btn-secondary"> <i class="fa fa-times"></i>
                                                CANCELAR</button>
                                            <button class="btn btn-primary"> <i class="fa fa-save"></i> SALVAR</button>
                                        </div>
                                    </div>
                                    <hr>
                                    <% if (dados) { %>
                                    <div class=" form-group row ">
                                        <div class="col">
                                            <label for="condominio">Nome do Condomínio</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-home"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="condominio" type="text"
                                                    placeholder="Nome do Condomínio"
                                                    autocomplete="nomecondominio" readonly="true"
                                                    value="<%= dados.nome_condominio %>">
                                            </div>
                                        </div>


                                    </div>
                                    <div class="form-group row">
                                        <div class="col">
                                            <label for="logradouro">Logradouro</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-road"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="logradouro" type="text"
                                                    placeholder="Logradouro"
                                                    autocomplete="cidadecondominio" readonly="true"
                                                    value="<%= dados.logradouro %>">
                                            </div>
                                        </div>
                                        <div class="col col-md-3">
                                            <label for="numero">Numero</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-hashtag"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="numero" type="text"
                                                    placeholder="Numero" autocomplete="numerocondominio" readonly="true"
                                                    value="<%= dados.numero %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col col-md-6">
                                            <label for="cidade">Cidade</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-city"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="cidade" type="text"
                                                    placeholder="Cidade" autocomplete="cidadecondominio" readonly="true"
                                                    value="<%= dados.cidade %>">
                                            </div>
                                        </div>
                                        <div class="col col-md-6">
                                            <label for="estado">Estado</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-globe-americas"></i>
                                                    </span>
                                                </div>
                                                <input class="form-control" id="estado" type="text"
                                                    placeholder="Estado" autocomplete="cidadecondominio" readonly="true"
                                                    value="<%= dados.estado %>">
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<% script('/javascript/perfil.js') -%>